<% layout("/layouts/boilerplate") %>
<div class="row">
    <h1 class="col-8 offset-4">SignUp on Awelust</h1>
     <div class="col-6 offset-3" >
        <form action="/signup" method="POST" class="needs-validation" novalidate>

            <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <input name="username" id="username" placeholder="Enter username" type="text" class="form-control" required>
            <div class="valid-feedback">looks good !</div>
            </div>


            <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input name="email" id="email" placeholder="Enter email" type="text" class="form-control" required>
            </div>

            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input name="password" id="password" placeholder="Enter password" type="text" class="form-control" required>
            </div>
         <button class="btn btn-success">SignUp</button>
        </form>
      </div>
</div>